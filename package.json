{
  "name": "webvipolyfill",
  "version": "1.2.1",
  "description": "A pattern for creating polyfills for WebVIs in LabVIEW NXG",
  "scripts": {
    "lint": "eslint .",
    "test": "npm run lint && npm run test-jasmine && npm run test-karma",
    "build": "rollup --config && uglifyjs \"source/webvipolyfill_*\" -b --comments \"all\" -o webvipolyfill_resources/webvipolyfill_functions.js",
    "test-jasmine": "jasmine",
    "test-karma": "karma start --browsers ChromeHeadlessNoSandbox",
    "test-karma-manual": "karma start --no-single-run"
  },
  "main": "webvipolyfill_resources/webvipolyfill.js",
  "repository": "github:rajsite/webvipolyfill",
  "author": "Milan Raj (@rajsite)",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^4.17.0",
    "jasmine": "^3.0.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.1",
    "promise-file-reader": "^1.0.1",
    "puppeteer": "^1.1.0",
    "rollup": "^0.55.1",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "uglify-js": "^3.3.16",
    "vireo": "^6.1.4",
    "xhook": "^1.4.7",
    "xhr2": "^0.1.4"
  }
}
